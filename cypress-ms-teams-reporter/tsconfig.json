{
  "compilerOptions": {
    "lib": ["es5", "dom"],
    "types": ["cypress"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "ES2018",
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
